@model MQTTDashboard.Models.Device

@{
    ViewData["Title"] = "EditDevice";
}

<h2>EditDevice</h2>

<h4>Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateDevice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeviceId" class="control-label"></label>
                <input asp-for="DeviceId" class="form-control" value=""/> 
                <span asp-validation-for="DeviceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeviceName" class="control-label"></label>
                <input asp-for="DeviceName" class="form-control" />
                <span asp-validation-for="DeviceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeviceLocation" class="control-label"></label>
                <input asp-for="DeviceLocation" class="form-control" />
                <span asp-validation-for="DeviceLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
    <script>
        window.onload = function () {
            var url = new URL(window.location);
            document.getElementById("DeviceId").value = url.searchParams.get("DeviceId");
            document.getElementById("DeviceName").value = url.searchParams.get("DeviceName");
            document.getElementById("DeviceLocation").value = url.searchParams.get("DeviceLocation");
        }
    </script>
</div>

<div>
    <a asp-action="DeviceList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
